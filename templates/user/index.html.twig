{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Iduser</th>
                <th>Nomuser</th>
                <th>Prenomuser</th>
                <th>Mailuser</th>
                <th>Telephonenumberuser</th>
                <th>Datenaissanceuser</th>
                <th>Roleuser</th>
                <th>Numeropackuser</th>
                <th>Datecommence</th>
                <th>Experienceuser</th>
                <th>Diplomeuser</th>
                <th>Adressesallesport</th>
                <th>Matriculefiscale</th>
                <th>Password</th>
                <th>Codeverification</th>
                <th>Imageuser</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.iduser }}</td>
                <td>{{ user.nomuser }}</td>
                <td>{{ user.prenomuser }}</td>
                <td>{{ user.mailuser }}</td>
                <td>{{ user.telephonenumberuser }}</td>
                <td>{{ user.datenaissanceuser ? user.datenaissanceuser|date('Y-m-d') : '' }}</td>
                <td>{{ user.roleuser }}</td>
                <td>{{ user.numeropackuser }}</td>
                <td>{{ user.datecommence ? user.datecommence|date('Y-m-d') : '' }}</td>
                <td>{{ user.experienceuser }}</td>
                <td>{{ user.diplomeuser }}</td>
                <td>{{ user.adressesallesport }}</td>
                <td>{{ user.matriculefiscale }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.codeverification }}</td>
                <td>{{ user.imageuser }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'iduser': user.iduser}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'iduser': user.iduser}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="17">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
